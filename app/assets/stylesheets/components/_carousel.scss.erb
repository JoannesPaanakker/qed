.carousel-wrapper {
  // height: 50vh;
  background-color: $qed;
}

.carousel-img {
  height: 100%;
}

.carousel-item {
  height: 100%;
  width: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: auto 100%;

}

.carousel-item1-nl {
  background-image: url(<%= asset_path 'QED_home_nl_text.jpg'%>);
}

.carousel-item1-en {
  background-image: url(<%= asset_path 'QED_home_text.jpg'%>);
}

.carousel-item2 {
  background-image: url(<%= asset_path 'GP.jpg'%>);
}

.carousel-item3 {
  background-image: url(<%= asset_path 'trade.jpg'%>);
}

.carousel-item4 {
  background-image: url(<%= asset_path 'arus.jpg'%>);
}

.carousel-item5 {
  background-image: url(<%= asset_path 'Fearsetting.jpg'%>);
}

.item-inner {
  display: flex;
  justify-content: center;
}

.carousel-control {
  background-image: none;
}

.carousel-indicators {
  bottom: -10px;
}
.carousel-indicators li {
  border-color: $new_blue;
}

.carousel-indicators .active {
  background-color: $new_blue;
}

@media screen and (min-width: 601px) {
  .item-inner {
    margin: 30px 0px 30px 0px;
    height: 45vh;
  }
}

@media screen and (max-width: 600px) {
  .item-inner {
    margin: 25px 0px 25px 0px;
    height: 40vh;
  }
}
